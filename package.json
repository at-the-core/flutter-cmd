{
  "name": "@riddance/env",
  "version": "0.2.7",
  "type": "module",
  "keywords": [
    "riddance",
    "environment",
    "devenv",
    "opinionated"
  ],
  "license": "MIT",
  "dependencies": {
    "@types/node": "^16",
    "@types/mocha": "10.0.1",
    "@tsconfig/node16": "1.0.3",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "cspell-lib": "6.18.1",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-unicorn": "45.0.2",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "mocha": "10.2.0",
    "prettier": "2.8.3",
    "source-map-support": "0.5.21",
    "typescript": "4.9.4"
  },
  "devDependencies": {
    "@types/eslint": "8.4.10",
    "@types/prettier": "2.7.2"
  },
  "scripts": {
    "prepare": "tsc && node ./bin/prepare.js",
    "start": "npm run prepare && node ./bin/install.js && node ./bin/watch.js",
    "prepack": "npm run prepare && node ./bin/build.js",
    "postpublish": "node ./bin/sync.js",
    "postinstall": "node ./bin/install.js"
  },
  "files": [
    "template/**",
    "*.js",
    "lib/*.js",
    "bin/*.js",
    "bin/lib/*.js"
  ],
  "bin": {
    "riddance-watch": "./bin/watch.js",
    "riddance-build": "./bin/build.js",
    "riddance-sync": "./bin/sync.js"
  }
}
